<script>

   const slider = document.querySelector('.slider');
let intervalId;

function activate(e) {
  const items = document.querySelectorAll('.Image-carousel-slider-item');

  if (e.target.matches('.next')) {
    slider.append(items[0]);
  } else if (e.target.matches('.prev')) {
    slider.prepend(items[items.length - 1]);
  }

  // Clear the existing interval
  if (intervalId) {
    clearInterval(intervalId);
  }

  // Restart the interval immediately, with a 3-second timer
  intervalId = setInterval(() => {
    const syntheticEvent = new Event('click', { bubbles: true, cancelable: true });
    const nextButton = document.querySelector('.next');
    nextButton.dispatchEvent(syntheticEvent);
  }, 3000);
}

document.addEventListener('click', activate, false);

// Start the interval immediately when the page loads
intervalId = setInterval(() => {
  const syntheticEvent = new Event('click', { bubbles: true, cancelable: true });
  const nextButton = document.querySelector('.next');
  nextButton.dispatchEvent(syntheticEvent);
}, 5000);
</script>

